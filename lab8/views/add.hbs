
<div class="container col-md-6 text-center">
    <form action="/add" method="post" class="card bg-light p-3">
        <h2 class="text-primary">ADD STUDENT</h2>
        <div class="form-group mt-3">
            <h5 class="text-success">Name</h5>
            <input type="text" name="name" id="" required minlength="3" maxlength="30"/>
        </div>
        <div class="form-group mt-3">
            <h5 class="text-success">age</h5>
            <input type="number" name="age" required min="1" max="150"/>
        </div>
        <div class="form-group mt-3">
            <h5 class="text-success">Email</h5>
            <input type="text" name="email" required minlength="3" maxlength="30"/>
        </div>
        <div class="form-group mt-3">
            <h5 class="text-success">Image</h5>
            <input type="text" name="image" required minlength="3" />
        </div>
        <div class="form-group mt-3">
            <h5 class="text-success">Address</h5>
            <input type="text" name="address" required minlength="3" maxlength="30"/>
        <div class="form-group mt-3">
            <input type="submit" value="Add"/>
        </div>
        
    </form>
</div>